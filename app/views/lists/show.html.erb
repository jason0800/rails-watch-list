<h2 class="m-5"><%= @list.name %></h2>

<div class="d-flex m-2">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card m-2" style="width: 18rem;">
      <img src="<%= bookmark.movie.poster_url %>" class="card-img-top height-100px"/>
      <h5 class="card-title"><%= bookmark.movie.title %></h5>
      <p><%= bookmark.movie.overview %></p>
      <p><%= bookmark.movie.rating %></p>
      <p><%= bookmark.comment %></p>
      <%= link_to "Delete",
          list_bookmark_path(@list, bookmark),
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
      %>
    </div>
  <% end %>
</div>

<%= link_to "Add A Movie To The List", new_list_bookmark_path(@list.id) %>
<%= link_to "Back To Lists", lists_path %>
