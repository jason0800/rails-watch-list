<h2 class="m-5"><%= @list.name %></h2>

<div class="d-flex m-5">
  <% @list.movies.each do |movie| %>
    <div class="card mr-2" style="width: 18rem;">
      <img src="<%= movie.poster_url %>" class="card-img-top height-100px"/>
      <h5 class="card-title"><%= movie.title %></h5>
      <p><%= movie.overview %></p>
      <p><%= movie.rating %></p>
    </div>
  <% end %>
</div>


<%= link_to "Add A Movie To The List", new_list_bookmark_path(@list.id) %>
